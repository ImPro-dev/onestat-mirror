include _navigation
include ../alert/_alert

mixin rd-navbar
	//RD Navbar
	.rd-navbar-wrap
		nav.rd-navbar
			.rd-navbar-panel
				.rd-navbar-panel-cell
					button.btn.btn-sm.btn-navbar-panel.rd-navbar-sidebar-toggle( data-navigation-switch= true ): span.linearicons-menu

				.rd-navbar-panel-cell.rd-navbar-panel-cell-search
					.rd-navbar-sidebar-search
						input.form-control( type='text', placeholder='Search' )

				.rd-navbar-panel-center

				.rd-navbar-panel-cell
					button.btn.btn-sm.btn-navbar-panel( data-multi-switch!={
						targets: '#subpanel-chat',
						scope: '#subpanel-chat',
						isolate: '[data-multi-switch]'
					} )
						span.linearicons-envelope
					#subpanel-chat.rd-navbar-subpanel
						include _navbar-chat-widget

				.rd-navbar-panel-cell
					button.btn.btn-sm.btn-navbar-panel( data-multi-switch!={
						targets: '#subpanel-notifications',
						scope: '#subpanel-notifications',
						isolate: '[data-multi-switch]'
					} )
						span.linearicons-alarm
						span.badge.badge-primary 2
					#subpanel-notifications.rd-navbar-subpanel
						.panel
							.panel-header
								h6.panel-title
									span.panel-icon.fa-bell
									span Notifications
							.panel-body.p-2.scroller.scroller-vertical
								.group-5
									+alert( {close: true} ).alert-primary.alert-sm
										span.alert-icon.fa-telegram
										span Message
									+alert( {close: true} ).alert-warning.alert-sm
										span.alert-icon.fa-warning
										span Warning
									+alert( {close: true} ).alert-danger.alert-sm
										span.alert-icon.fa-remove
										span Error
									+alert( {close: true} ).alert-success.alert-sm
										span.alert-icon.fa-thumbs-up
										span Success
							.panel-footer.p-2
								a.btn.btn-primary.btn-sm( href='alerts.html' ) See more

				.rd-navbar-panel-cell.rd-navbar-panel-cell-user
					.btn.btn-sm.btn-navbar-panel( data-multi-switch!={
						targets: '#subpanel-user',
						scope: '#subpanel-user',
						isolate: '[data-multi-switch]'
					} )
						.media.align-items-center
							img.rounded-circle(src='images/users/user-07-50x50.jpg', width='50', height='50', alt='')
							.media-body.ml-2
								p Matthew Powers
					#subpanel-user.rd-navbar-subpanel
						.panel
							.panel-header
								.group-5.d-flex.flex-wrap.align-items-center
									img.rounded-circle.mr-2(src='images/users/user-07-50x50.jpg', width='50', height='50', alt='')
									h6.panel-title Matthew Powers
							.panel-body.p-0.scroller.scroller-vertical
								.list-group
									.list-group-item.rounded-0
										.media.align-items-center
											.pr-2
												span.fa-user.text-primary
											.media-body
												h6: a.text-dark.btn-link( href='#' ) My Profile
									.list-group-item.rounded-0
										.media.align-items-center
											.pr-2 
												span.fa-envelope-o.text-primary
											.media-body
												h6: a.text-dark.btn-link( href='#' ) My Messages
											.badge.badge-warning 12
									.list-group-item.rounded-0
										.media.align-items-center
											.pr-2
												span.fa-rocket.text-primary
											.media-body
												h6: a.text-dark.btn-link( href='#' ) My Activities
									.list-group-item.rounded-0
										.media.align-items-center
											.pr-2
												span.fa-desktop.text-primary
											.media-body
												h6: a.text-dark.btn-link( href='#' ) My Tasks
											.badge.badge-success 05
									.list-group-item.rounded-0
										.media.align-items-center
											.pr-2
												span.fa-line-chart.text-primary
											.media-body
												h6: a.text-dark.btn-link( href='#' ) Billing
							.panel-footer.p-2
								.d-flex.align-items-center.justify-content-between
									a.btn.btn-danger.btn-sm( href='#' ) Sing Out
									a.btn.btn-sm.btn-light( href='#' ) Upgrade Plan

				.rd-navbar-panel-cell
					button.btn.btn-sm.btn-navbar-panel( data-multi-switch!={
						targets: '.sidebar',
						scope: '.sidebar',
						isolate: '[data-multi-switch]'
					} ): span.linearicons-ellipsis

			.rd-navbar-sidebar.scroller.scroller-vertical
				.rd-navbar-sidebar-panel
					div
						.group-15 
							.rd-navbar-brand
								a( href='index.html' ): img( src='images/logo-1-137x45.png', alt='' )
							.rd-navbar-sidebar-search
								input.form-control( type='text', placeholder='Search' )
					button.btn.btn-sm.btn-navbar-panel.rd-navbar-sidebar-toggle( data-navigation-switch= true ): span.linearicons-menu

				+navigation( menu ) 
