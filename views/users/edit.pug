extends ../layout/layout

block header
  include ../layout/header

block content
  .container
    .row
      .col-12
        h2.mb-4
          | Редагувати Профайл
        form(role='form' class='stat-form' method='POST' action='/users/edit')
          div.form-group.mb-4
            label(class='form-label' for='name') Імʼя:
            .form-control-wrapper
              input#name.form-control(type='text', name='name', required, value=user.name)
          div.form-group.mb-4
            label(class='form-label' for='email') Емейл:
            .form-control-wrapper
              input#email.form-control(type='text', name='email', required, value=user.email)
          div.form-group.mb-4
            label(class='form-label' for='password') Пароль:
            .form-control-wrapper
              input#password.form-control(type='password', name='password', required)
          div.form-group.mb-4
            label(class='form-label' for='webID') WebID:
            .form-control-wrapper
              input#webid.form-control(type='text', name='webID', required, value=user.webID)
          div.form-group.mb-5
            label(class='form-label' for='role') Роль:
            .form-control-wrapper
              select#role.form-control(type='text', name='role', required)
                option(name='user', value='user') user
                option(name='manager', value='manager') manager
                option(name='admin', value='admin') admin
          input#id.form-control(type='hidden', name='id', value=user.id)
          button.btn.btn-primary.submit-btn.w-100(type="submit") Редагувати
        <a class="btn btn btn-light" href="/users">< До списку</a>
block footer
  include ../layout/footer

